  <div class="form-group">
    <%= label_tag :row_selector, t(:row_selector_label) %>
    <%= text_field_tag "row_selector", "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :original_selector, t(:original_selector_label) %>
    <%= text_field_tag "original_selector", "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :translate_selector, t(:translate_selector_label) %>
